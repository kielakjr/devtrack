generator client {
  provider = "prisma-client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]

  projects      Project[]
  courses       Course[]
  studySessions StudySession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?
  githubRepo  String
  githubOwner String
  githubName  String

  status   ProjectStatus @default(ACTIVE)
  priority Priority      @default(MEDIUM)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sessions StudySession[]
  goals    ProjectGoal[]
  notes    ProjectNote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, githubRepo])
  @@index([userId, status])
}

enum ProjectStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model ProjectGoal {
  id          String   @id @default(cuid())
  title       String
  description String?
  targetDate  DateTime?
  priority    Priority  @default(MEDIUM)
  completed   Boolean  @default(false)
  completedAt DateTime?

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([projectId])
}


model ProjectNote {
  id      String @id @default(cuid())
  content String

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}


model Course {
  id         String  @id @default(cuid())
  title      String
  platform   String?
  url        String?
  totalHours Float?

  status   CourseStatus @default(IN_PROGRESS)
  progress Float       @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sessions StudySession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
}

enum CourseStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  DROPPED
}


model StudySession {
  id        String @id @default(cuid())

  startedAt       DateTime
  endedAt         DateTime?
  durationMinutes Int?

  type SessionType @default(CODING)
  note String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  courseId String?
  course   Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([userId, startedAt])
  @@index([projectId])
  @@index([courseId])
}

enum SessionType {
  CODING
  LEARNING
  DEBUGGING
  REVIEWING
  PLANNING
}
